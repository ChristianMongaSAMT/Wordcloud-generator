#:kivy 1.0.9
    
<WordCloudGUI>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Input type:"
        Spinner:
            size_hint: 1, None
            text: "Choose"
            values: "File", "Simple text", "URL"
        Label:
            text: "Important words"
        TextInput:
            text: "Text Input"
        Label:
            text: "Font Family"
        Spinner:
            text: "Choose"
            values: "1","2"
        BoxLayout:
            orientation: "horizontal"
            Switch:
            Label:
                text: "Border"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: ""
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Excluded words"
            TextInput:
                text: "Text Input"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Border Size"
            Slider:
                id: border_slider
                max: 50
                value: 10
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            orientation: "vertical"
            Label:
                text: "WORDCLOUD GENERATOR"
            Label:
                text: "percorso"
        Image:
            source: "./pictures/class.png"
        Button:
            text: "Download"
    
