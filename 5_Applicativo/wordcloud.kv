#:kivy 1.0.9
    
<WordCloudGUI>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Input type:"
        Spinner:
            size_hint: 1, None
            text: "Choose"
            values: "File", "Simple text", "URL"
        Label:
            text: "Important words"
        TextInput:
            text: "Text Input"
        Label:
            text: "Font Family"
        Spinner:
            text: "Choose"
            values: "1","2"
        BoxLayout:
            orientation: "horizontal"
            Switch:
            Label:
                text: "Border"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: ""
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Excluded words"
            TextInput:
                text: "Text Input"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Border Size"
            Slider:
                id: border_slider
                max: 50
                value: 10
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            orientation: "vertical"
            Label:
                id: l1
                text: "WORDCLOUD GENERATOR"
            TextInput:
                id: path
                hint_text:'Enter text'
                on_text: app.visualizer()
        Image:
            id: image
            source: app.path
        Button:
            text: "Download"
            on_release: root.manager.current = "download"


<DownloadScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Resolution"
            size_hint: 0.1, 0.2
        Label:
            text: "Extension"
            size_hint: 0.1, 0.2
        Button:
            text: "Download"
            on_release: root.downloadImage()
            size_hint: 0.1, 0.2
        Button:
            text: "Exit"
            on_release: root.manager.current = "gui"
            size_hint: 0.1, 0.2
    
