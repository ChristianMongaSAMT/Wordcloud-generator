#:kivy 1.0.9
    
<WordCloudGUI>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.5
            
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Input type:"
                    size_hint: 0.3, 0.2
                    text_size: self.size
                    halign: "left"
                Spinner:
                    size_hint: 0.5, 0.2
                    text_size: self.size
                    halign: "center"
                    valign: "middle"
                    text: "Choose"
                    values: "File", "Simple text", "URL"
        Label:
            text: "Excluded words"
            text_size: self.size
            size_hint: 0.5, 0.3
        TextInput:
            text: "Text Input"
            text_size: self.size
            size_hint: 1, 0.15
        Label:
            text: "Important words"
            text_size: self.size
            size_hint: 0.5, 0.3
        TextInput:
            text: "Text Input"
            text_size: self.size
            size_hint: 1, 0.15
        Label:
            text: "Font Family"
            id: fontLabel
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            size_hint: 1, 0.3
        Spinner:
            size_hint: 0.5, 0.2
            halign: "center"
            valign: "middle"
            text_size: self.size
            text: 'Font'
            values: 'Cartoon','Borex','Krinkes','Theaters','Calibri','Roboto'
            id: fontSpinner
            on_text:
                app.font_changed()
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.4
            Label:
                text: "Border"
            Switch:
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.4
            Label:
                text: "Border Size"
            Slider:
                id: border_slider
                max: 50
                value: 10
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            padding: 10
            size_hint: 1, 0.5
            orientation: "vertical"
            Label:
                id: l1
                text: "WORDCLOUD GENERATOR"
                font_name: "Borex"
                text_size: self.size
                size_hint: 1, 0.5
                halign: "center"
                valign: "middle"
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, 0.5
                Label:
                    text: "Path"
                    text_size: self.size
                    size_hint: 0.2, 0.6

                TextInput:
                    id: path
                    hint_text:'Enter text'
                    on_text: app.visualizer()
                    text_size: self.size
                    size_hint: 1, 0.5
        Image:
            id: image
            size_hint: 1, 0.5
            source: app.path
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.2
            padding: 20
            Button:
                text: "Download"
                text_size: self.size
                halign: "center"
                valign: "middle"
                on_release: root.manager.current = "download"


<DownloadScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 100
        Label:
            text: "Resolution"
            halign: "center"
        Label:
            text: "Extension"
            halign: "center"
        Button:
            text: "Download"
            on_release: app.downloadImage()
            halign: "center"
        Button:
            text: "Exit"
            on_release: root.manager.current = "gui"
            halign: "center"
    
