#:kivy 2.1.0
    
<WordCloudGUI>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.5
            
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Input type:'
                    size_hint: 0.5, 0.5
                    font_size: '20sp'
                    text_size: self.size
                    align: 'left'
                   
                Spinner:
                    id: inputType
                    size_hint: 0.5, 0.5
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    text: 'LIST'
                    values: 'FILE', 'LIST', 'URL'
                    on_text: app.generateListWord(self.text)
                    
            TextInput:
                id: pathWords
                hint_text:'Enter path file words'
                on_text: app.generateListWord(app.getInputType())
        Label:
            text: 'Excluded words'
            font_size: '20sp'
            text_size: self.size
            size_hint: 0.5, 0.3
        TextInput:
            text: 'Text Input'
            text_size: self.size
            size_hint: 1, 0.15
        Label:
            text: 'Important words'
            font_size: '20sp'
            text_size: self.size
            size_hint: 0.5, 0.3
        TextInput:
            text: 'Text Input'
            text_size: self.size
            size_hint: 1, 0.15
        Label:
            text: 'Font Family'
            id: fontLabel
            halign: 'left'
            valign: 'middle'
            font_size: '20sp'
            text_size: self.size
            size_hint: 1, 0.3
        Spinner:
            size_hint: 0.5, 0.2
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            text: 'Font'
            values: 'Cartoon','Borex','Krinkes','Theaters','Calibri','Roboto'
            id: fontSpinner
            on_text:
                app.font_changed()
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.4
            Label:
                text: 'Border'
                font_size: '20sp'
            Switch:
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.4
            Label:
                text: 'Border Size'
                font_size: '20sp'
            Slider:
                id: border_slider
                max: 50
                value: 10
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: 10
            size_hint: 1, 0.5
            orientation: 'vertical'
            Label:
                id: l1
                text: 'WORDCLOUD GENERATOR'
                font_name: 'Borex'
                font_size: '20sp'
                text_size: self.size
                size_hint: 1, 0.5
                halign: 'center'
                valign: 'middle'
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 0.5
                Label:
                    text: 'Path'
                    font_size: '20sp'
                    text_size: self.size
                    size_hint: 0.2, 0.6

                TextInput:
                    id: path
                    hint_text:'Enter text'

                    on_text: app.visualizer()
                    text_size: self.size
                    size_hint: 1, 0.5
        Image:
            id: image
            size_hint: 1, 0.5
            source: app.path
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.2
            padding: 20
            Button:
                text: 'Download'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_release: root.manager.current = 'download'
            Button:
                text: 'Modify'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_release: app.changeToImageModifier()


<DownloadScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        Label:
            text: 'Resolution'
            halign: 'center'
        Label:
            text: 'Extension'
            halign: 'center'
        Button:
            text: 'Download'
            on_release: app.downloadImage()
            halign: 'center'
        Button:
            text: 'Exit'
            on_release: root.manager.current = 'gui'
            halign: 'center'

<ImageModifier>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: imageMod
            source: ''
        BoxLayout:
            size_hint: 1, 0.2
            orientation: 'vertical'
            Label:
                text: 'Select Tolerance'
                font_size: '20sp'
            Slider:
                id: tolerance_slider
                step: 10
                max: 2000
                min: 100
                value: 100
                on_touch_up: app.changeToImageModifier()
            Label:
                id: tolerance_label
                text: 'Tolerance: 100'
        Button:
            text: 'Exit'
            size_hint: 0.1,0.1
            on_release: root.manager.current = 'gui'
        
    

