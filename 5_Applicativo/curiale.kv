#:kivy 1.0.9
    
<CurialeGUI>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        TextInput:
            id: path
            hint_text:'Enter path'
            on_text: app.visualizer()
        Image:
            id: image
            source: app.path

    
